<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <%- include('../property/header') %>

  <body style="background-color: rgb(159, 152, 141);">
<!-- Section: Design Block -->
<section class="text-center text-lg-start">
    <style>
      .cascading-right {
        margin-right: -50px;
      }
  
      @media (max-width: 991.98px) {
        .cascading-right {
          margin-right: 0;
        }
      }
    </style>
  
    <!-- Jumbotron -->
    <div class="container py-4" style="margin-top: 5vh;" >
      <div class="row g-0 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card cascading-right" style="
              background: hsla(0, 0%, 100%, 0.472);
              backdrop-filter: blur(30px);
              border-radius: 30px;
              ">
            <div class="card-body p-5 shadow-5 text-center">
              <h2 class="fw-bold mb-5">Add New Profile</h2>
              
              <form action="/addProfile" method="POST">
                  
                  <h6>Name:</h6>
                <div class="form-outline mb-4">
                    <input type="text" name="name" id="form3Example3" class="form-control" placeholder="" style="text-align: center;"/>
                    <label class="form-label" for="form3Example3"></label>
                  </div>
  
                  <h6>Bio:</h6>
                <div class="form-outline mb-4">
                    <input type="text" name="bio" id="form3Example4" class="form-control" placeholder="" style="text-align: center;"/>
                    <label class="form-label" for="form3Example4"></label>
                  </div>
  
                  <h6>Gender:</h6>
                  <select class="form-select mb-4" aria-label="Default select example" name="gender">
                    <option selected>Select here..</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                  </select>
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-dark mb-4" >
                  Submit
                </button>
              </form>
            </div>
          </div>
        </div>
  
        <div class="col-lg-6 mb-5 mb-lg-0">
          <img src="https://plus.unsplash.com/premium_photo-1673809798703-6082a015f931?auto=format&fit=crop&q=80&w=2865&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="w-100 rounded-4 shadow-4"
            alt="" />
        </div>
      </div>
    </div>
    <!-- Jumbotron -->
  </section>
  <!-- Section: Design Block -->
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>